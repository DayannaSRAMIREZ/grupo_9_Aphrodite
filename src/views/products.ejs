<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %> 
<body class="main__productos">
  <%- include('./partials/header') %> 

  <main >
    <div class="buscador_productos">
       <form action="/product/result" method="GET" >
      <input type="text" name="keyword" placeholder="Buscar un producto... "> 
      <button type="submit">Buscar</button> 
      </form>
    </div>

    <h2 class="titulo__productos">Anillos</h2>
   
  <section class="home_cards">

    <% arrayAnillos.forEach(({id, name, price, images, discount}) => { %>
      <article>
        <div class="tarjeta tarjeta1">
          <h4><%= name %> </h4>
          <div class="home__contenedor">
            <% if (discount>0) { %>
              <p><%= discount %>% off</p>
            <% } %>
           
            <% images.forEach(image => { %>
              <% if (image.primary) { %>
                <img src="/images/products/<%= image.name%> " alt="imagePrimary"/>
              <% } %>
            <% }) %>
      
          </div>
          <div class="tarjeta__pie">
            <h6>u$s <%= price %> </h6>
            <button><a href="/product/detail/<%= id %> ">ver más</a></button>
          </div>
        </div>
      </article>
    <% }) %>
     
  
    </section>
    
